{
  "name": "CourseAwareIDE",
  "displayName": "CourseAwareIDE",
  "publisher": "jianuo",
  "description": "A powerful IDE for courseware development.",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.100.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:CourseAwareIDE.openWebview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CourseAwareIDE.openWebview",
        "title": "Open Webview"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "CourseAwareIDE-sidebar",
          "title": "Course IDE",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "CourseAwareIDE-sidebar": [
        {
          "id": "CourseAwareIDE-treeview",
          "name": "âš¡ Open Webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm install",
    "compile": "tsc -p .",
    "bundle": "node ./node_modules/esbuild/bin/esbuild ./src/extension.ts --bundle --platform=node --target=node16 --external:vscode --outfile=out/extension.js",
    "watch": "tsc -p . --watch",
    "package": "vsce package",
    "lint": "eslint src",
    "test:backend": "jest --config jest.config.js --runInBand"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.32",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.11.14",
    "@types/supertest": "^6.0.3",
    "@types/web": "^0.0.235",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.8",
    "@types/vscode": "^1.100.0",
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "markdown-it": "^14.1.0",
    "pdf-parse-debugging-disabled": "^1.1.1",
    "pdf2image": "^1.2.3",
    "pdfjs-dist": "^5.2.133",
    "pg": "^8.16.0",
    "pg-protocol": "^1.9.5",
    "react-markdown": "^10.1.0",
    "react-modal": "^3.16.3",
    "react-syntax-highlighter": "^15.6.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1"
  }
}
